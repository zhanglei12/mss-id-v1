		<td>调度备注:</td>
		<td><input type="text"><input type="button" value="添加"></td>
	</tr>
	<tr>
		<tr>
			<td>发票类型</td>
			<td>{$detail.invoice_type}</td>
			<td>发票title</td>
			<td>{$detail.invoice_title}</td>
		</tr>
	</tr>
</table>	
</div>
<div class="box_store">				<!-- 店铺区域 -->
	<table>
		<tr>
			<td>店铺</td>
			<td>{$detail.store_name}</td>
			<td>联系电话</td>
			<td>{$detail.tel}</td>
			<td>合作伙伴</td>
		</tr>
		<tr>
			
		</tr>
	</table>
</div>
<div class="box_goods">				<!-- 菜品区域 -->
	<table border="1" cellspacing="0">
	<section></section>
		<tr>
			<td>菜品</td>
			<td>数量</td>
			<td>单价</td>
			<td>促销价</td>
			<td>规格</td>
