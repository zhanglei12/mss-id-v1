	    		<div class="logout">
	    		<img src="/public/img/nav_down.png"/><a id='loginout' href="#" style="color:#bbbbbb">退出</a>
	    		</div>
	    	</div>
    	</div>
    </div>
    <!-- 头部结束 -->

    <div class='login_show' title='登录管理'>  <!--退出提示dialog-->

    </div>

    <!-- 内容开始 -->

    <script type='text/javascript'>
    	$(function(){
    		$(document).on("click","#loginout",function(){
    				var msg = '确实要退出登录吗?';
    				$(".login_show").html(msg);

    				$(".login_show").dialog({
					  		resizable:true,
							modal: true,
							buttons: {
								"退出": function(){
									window.location.href='/Index/loginout';
								},

								"取消": function(){
									$(".login_show").dialog("close");
									return false;
								},	
							},
			  		});		
    		});

    	});

    </script>
